{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run test.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "purpose": [
                "debug-test"
            ]
        },
        {
            "name": "Python: Run extractor.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_extractor.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/tidyworld",
            "purpose": [
                "debug-test"
            ]
        },
        {
            "name": "Python: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--no-cov"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "purpose": [
                "debug-test"
            ]
        },
        {
            "name": "ADK Run",
            "type": "debugpy",
            "request": "launch",
            "module": "google.adk.cli",
            "cwd": "${workspaceFolder}/tidyworld",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "args": [
                "run",
                "_agents",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
